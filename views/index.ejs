<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Pokédex</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Pokédex</h1>
    <ul>
        <% pokemons.forEach(function(pokemon) { %>
            <li>
                <a href="/pokemon/<%= pokemon.id %>"><%= pokemon.name %></a> - <%= pokemon.tipo %>
            </li>
        <% }); %>
    </ul>
    <div class="center-links">
        <a href="/create">CADASTRAR NOVO POKÉMON</a>
        <a href="/trainers">LISTA DE TREINADORES</a>
    </div>
</body>
</html>